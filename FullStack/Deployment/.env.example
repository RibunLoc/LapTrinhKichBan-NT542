########################################
# Sensitive values (NEVER commit .env)
########################################
DO_ACCESS_TOKEN=
SPACES_ACCESS_KEY_ID=
SPACES_SECRET_ACCESS_KEY=
SLACK_WEBHOOK_URL=

# Optional: emails list for Terraform alerting (JSON/HCL list)
# Example: ["security@example.com","ops@example.com"]
ALERT_EMAILS_JSON=

########################################
# Terraform (recommended: use TF_VAR_* instead of terraform.tfvars)
########################################
TF_VAR_do_token=
TF_VAR_spaces_access_id=
TF_VAR_spaces_secret_key=
TF_VAR_region=sgp1
TF_VAR_spaces_region=sgp1
TF_VAR_environment=demo
TF_VAR_owner=team-ops
TF_VAR_admin_cidrs=["1.2.3.4/32"]
TF_VAR_ssh_key_names=["your-ssh-key-name-in-digitalocean"]
TF_VAR_spaces_bucket_name=cis-spaces-yourteam
TF_VAR_spaces_expire_days=30
TF_VAR_enable_cdn=true
TF_VAR_slack_webhook_url=
TF_VAR_alert_emails=

########################################
# CIS controls defaults
########################################
ENV_TAG=env:demo
SSH_KEY_PATH=~/.ssh/id_rsa
SSH_PORT=22
SSH_USER=devops
SSH_USER_FALLBACK=root
SSH_STRICT_HOST_KEY_CHECKING=no

########################################
# Spaces checks (used by scripts/bash/controls/spaces_*)
########################################
SPACES_BUCKET=cis-spaces-yourteam
SPACES_REGION=sgp1
SPACES_ENDPOINT=https://sgp1.digitaloceanspaces.com
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

########################################
# Manual evidence (monitoring 2.2.1)
########################################
SECURITY_HISTORY_EVIDENCE_FILE=reports/manual/security_history_2.2.1.md
EVIDENCE_MAX_AGE_HOURS=168

########################################
# Dangerous automation gates
########################################
# SSH key cleanup: DRY_RUN=1 -> no delete; APPROVE_DELETE=1 after approval; SKIP_CONFIRM=1 to skip prompt
DRY_RUN=1
APPROVE_DELETE=0
SKIP_CONFIRM=0

# Full pipeline toggles (scripts/bash/run_full_cis_pipeline.sh)
RUN_APPLY=1
RUN_HARDEN=1
RUN_SECURITY_UPDATES=1
RUN_LUKS=0
CONFIRM_LUKS=0
