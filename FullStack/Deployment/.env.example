########################################
# Provider / API tokens (không commit giá trị thật)
########################################
# DO access token
DO_ACCESS_TOKEN=

# Spaces credentials cho script check_spaces.sh
SPACES_BUCKET=
SPACES_REGION=
SPACES_ENDPOINT=
SPACES_ACCESS_KEY_ID=
SPACES_SECRET_ACCESS_KEY=

# tùy chọn
EXPECTED_EXPIRE_DAYS=

########################################
# CIS scripts defaults
########################################
ENV_TAG=
ADMIN_CIDRS=

# SSH kiểm tra sshd_config check_volume.sh và check_droplet.sh
# Để check nhiều droplet cùng lúc: "root@ip1, root@ip2"
# SSH_TARGET="devops@152.42.175.200"
SSH_KEY_PATH=
SSH_PORT=
SSH_USER=
SSH_USER_FALLBACK=


# Ansible audit (check_droplet.sh)
# RUN_ANSIBLE_AUDIT=1 để chạy Ansible audit SSH/OS checks (sshd_config, auditd, etc.)
# RUN_ANSIBLE_AUDIT=0 chỉ check API (backup, monitoring)
RUN_ANSIBLE_AUDIT=1
ANSIBLE_INVENTORY=
ANSIBLE_PLAYBOOK=
ANSIBLE_LIMIT=
ANSIBLE_HOST_KEY_CHECKING=


# RUN CHECK_ALERTS=1 để kiểm tra alert 

# Spaces check
SPACES_BUCKET=
SPACES_REGION=
SPACES_ENDPOINT=

########################################
# Cleanup SSH keys
########################################
# DRY_RUN=1 để không xóa; APPROVE_DELETE=1 sau khi được duyệt
DRY_RUN=1
SKIP_CONFIRM=0
APPROVE_DELETE=0
SLACK_WEBHOOK_URL=

########################################
# Terraform (tùy chọn, có thể dùng TF_VAR_* thay thế)
########################################
RUN_APPLY=1 # RUN_APPLY=1 để chạy 'terraform apply' tự động sau 'terraform plan'
TF_VAR_do_token=
TF_VAR_spaces_access_id=
TF_VAR_spaces_secret_key=
TF_VAR_admin_cidrs=
TF_VAR_slack_webhook_url=
TF_VAR_spaces_bucket_name=